{
  "name": "matrix-puppet-bridge",
  "version": "1.16.2",
  "description": "facilitates writing a certain kind of matrix bridge",
  "main": "index.js",
  "scripts": {
    "test": "echo \"no tests at this time\"; exit 1",
    "gendoc": "jsdoc -r src -P package.json -R README.md -d docs"
  },
  "keywords": [
    "matrix"
  ],
  "contributors": [
    "Keyvan Fatehi",
    "Andrew Johnson"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/matrix-hacks/matrix-puppet-bridge.git"
  },
  "dependencies": {
    "bluebird": "^3.5.5",
    "concat-stream": "^1.6.0",
    "debug": "^2.6.0",
    "fluent-ffmpeg": "^2.1.2",
    "image-size": "^0.7.3",
    "js-yaml": "^3.13.1",
    "matrix-appservice-bridge": "^1.9.0",
    "matrix-js-sdk": "^2.1.0",
    "mime-types": "^2.1.23",
    "needle": "^1.4.5",
    "read": "^1.0.7",
    "tempfile": "^1.1.1",
    "tmp": "^0.0.31"
  },
  "devDependencies": {
    "eslint": "^3.12.2",
    "jsdoc": "^3.4.3"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": 0,
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
